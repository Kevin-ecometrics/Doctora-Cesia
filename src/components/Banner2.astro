<style>
  @keyframes desplazar {
    from {
      transform: translateX(50%);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .banner-infinito {
    display: inline-flex;
    animation: desplazar 9s linear infinite;
  }

  .banner-infinito:hover {
    animation-play-state: paused;
  }
</style>
