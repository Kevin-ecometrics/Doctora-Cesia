          </div>
        </div>
        <div class="bg-white bg-opacity-60 mb-4 rounded-3xl p-4">
          <div class="border border-[#B09FCD] w-[169px] mb-4"></div>
          <h1 class="font-glorich font-black text-3xl mb-4 text-[#626262]">
            ULTIMOS POST
          </h1>
          <div class="flex gap-4 items-start flex-col">
            {
              posts.map((post) => (
                <ul>
                  <div class="flex flex-col items-start">
                    <li
                      class="text-black
