---
import Layout from "@layouts/Layout.astro";
import { fade } from "astro:transitions";

let categorias = [
  "ANTICONCEPCION",
  "EMBARAZO",
  "PAPILOMA",
  "MATERNINDAD",
  "RIESGOS",
  "DIVERSIDAD",
];

let posts = [
  {
    title:
      "Acuerpar el nacimiento: La experiencia de revolucionar y empoderar el trabajo de parto",
    date: "June 15, 2023",
    link: "/blog/Acuerpar-el-nacimiento/",
  },
  {
    title:
      "La esencialidad y libertad que implica el aborto libre de estigma: Abordaje desde la perspectiva de género y derechos humanos",
    date: "June 15, 2023",
    link: "/blog/La-esencialidad-y-libertad-que-implica-el-aborto-libre-de-estigma/",
  },
  {
    title: "¿Qué hacer si te han detectado el virus del papiloma humano (vph)?",
    date: "June 15, 2023",
    link: "/blog/Que-hacer-si-te-han-detectado-el-virus-del-papiloma-humano/",
  },
];

let tags = [
  "DIU",
  "EMBARAZO",
  "VPH",
  "ANTICONCEPCION",
  "VIH",
  "OBSTETRICA",
  "BEBES",
  "MATERNINDAD",
];
---

<Layout title="Blog">
  <main transition:animate={fade({ duration: "1s" })}>
    <img src="/portada2.webp" class="w-full" alt="" />
    <div class="px-8 flex gap-4 bg-[#7DCAD9] py-8">
      <div class="md:w-[80%] p-4 bg-white rounded-3xl overflow-x-hidden">
        <aside class="p-4 block md:hidden">
          <div class="bg-white bg-opacity-60 mb-4 rounded-3xl p-4">
            <div class="border border-[#7DCAD9] w-[169px] mb-4"></div>
            <h1 class="font-glorich font-black text-3xl mb-4 text-[#626262]">
